<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
          <%= review.content %>
        </li>
  <% end %>
</ul>

<%= link_to 'Back', restaurants_path %> |
<%= link_to "Create review", new_restaurant_review_path(@restaurant) %>
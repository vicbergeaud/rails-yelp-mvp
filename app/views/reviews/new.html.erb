<div class="container">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: Review::RATINGS %>
    <%= f.submit "Create Review", class: "btn btn-primary" %>
  <% end %>
  <%= link_to 'Back to the restaurant', @restaurant %> |
  <%= link_to 'Back to the list', restaurants_path %>
</div>